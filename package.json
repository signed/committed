{
  "name": "ts-starter",
  "version": "1.0.0",
  "description": "Basic typescript setup for tdd",
  "packageManager": "pnpm@8.6.7",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "dev": "pnpm clean && pnpm run server",
    "prod": "pnpm clean && pnpm run lint && pnpm run build && pnpm run server:prod",
    "build": "pnpm typecheck && vite build",
    "typecheck": "tsc --noEmit",
    "server": "tsx ./server/index.ts",
    "server:prod": "cross-env NODE_ENV=production tsx ./server/index.ts",
    "lint": "eslint . --max-warnings 0",
    "clean": "rimraf ./dist",
    "format": "prettier --write .",
    "execute": "tsx src/index.ts",
    "nit-pick": "pnpm format && pnpm lint && pnpm test && pnpm typecheck"
  },
  "dependencies": {
    "compression": "1.7.4",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "simple-git": "3.19.1",
    "sirv": "2.0.3",
    "vite": "4.4.8",
    "vite-plugin-ssr": "0.4.134"
  },
  "devDependencies": {
    "@signed/prettier-config": "0.1.0",
    "@tsconfig/node20": "20.1.0",
    "@tsconfig/strictest": "2.0.1",
    "@types/compression": "1.7.2",
    "@types/express": "4.17.17",
    "@types/node": "20.4.6",
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7",
    "@typescript-eslint/eslint-plugin": "6.2.1",
    "@typescript-eslint/parser": "6.2.1",
    "@vitejs/plugin-react": "4.0.4",
    "cross-env": "7.0.3",
    "eslint": "8.46.0",
    "eslint-plugin-react": "7.33.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.3",
    "prettier": "3.0.1",
    "rimraf": "5.0.1",
    "tsx": "3.12.7",
    "typescript": "5.1.6",
    "vitest": "0.34.1"
  },
  "prettier": "@signed/prettier-config"
}
